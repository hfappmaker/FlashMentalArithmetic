                                                <DoubleAnimation.EasingFunction>

                                                    -->
                <!-- You get the EasingMode property for free on your custom
                                                             easing function.-->
                <!--
                                                    <CustomEase:CustomSeventhPowerEasingFunction EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>-->
            </Path.Triggers>
        </Path>
    </Grid>
</ContentPage>
