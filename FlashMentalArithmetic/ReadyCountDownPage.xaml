<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlashMentalArithmetic.ReadyCountDownPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModel="clr-namespace:PresentationModel;assembly=PresentationModel">
    <ContentPage.BindingContext>
        <viewModel:ReadyCountDownPageModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <Label 
            Text="{Binding Count.Value, Mode=OneWay}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="Loaded" Command="{Binding StartCountDownCommand}"/>
    </ContentPage.Behaviors>
</ContentPage>
